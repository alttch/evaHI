<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog_1"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/space_15dp">

    <LinearLayout
        android:id="@+id/dialog_container_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/space_15dp"
        android:paddingTop="@dimen/space_15dp"
        android:paddingEnd="@dimen/space_15dp"
        android:paddingBottom="@dimen/space_20dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textColor="@color/app_violet_1"
            android:textSize="@dimen/text_views_text_size_16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/a_cancel"
                android:layout_width="100dp"
                android:layout_height="@dimen/space_35dp"
                android:background="@drawable/drawable_button_2"
                android:text="@string/app_a_settings_u_title_cancel"
                android:textColor="@drawable/selector_change_white_color_to_white_50_color" />

            <Space
                android:layout_width="@dimen/space_20dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/a_yes"
                android:layout_width="100dp"
                android:layout_height="@dimen/space_35dp"
                android:background="@drawable/drawable_button"
                android:text="@string/app_a_settings_u_title_yes"
                android:textColor="@drawable/selector_change_white_color_to_white_50_color" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>