<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/ui_f_menu_item_shadow"
        android:layout_width="35dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/background_menu_5" />

    <RelativeLayout
        android:id="@+id/ui_f_menu_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginEnd="@dimen/space_35dp"
            android:background="@drawable/selector_change_different_color_to_simple_color" />

        <TextView
            android:id="@+id/ui_f_menu_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/space_20dp"
            android:layout_marginStart="@dimen/space_15dp"
            android:layout_toStartOf="@+id/ui_f_menu_item_icon_container"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@color/app_white"
            android:textSize="@dimen/text_views_text_size_14sp" />

        <FrameLayout
            android:layout_width="@dimen/space_40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/drawable_menu_shadow" />

        <FrameLayout
            android:id="@+id/ui_f_menu_item_icon_container"
            android:layout_width="@dimen/space_40dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/space_15dp"
            android:background="@drawable/background_menu_3">

            <ImageView
                android:id="@+id/ui_f_menu_item_icon"
                android:layout_width="@dimen/space_20dp"
                android:layout_height="@dimen/space_20dp"
                android:layout_gravity="center_vertical|center_horizontal"
                tools:ignore="ContentDescription" />

        </FrameLayout>

    </RelativeLayout>

</RelativeLayout>